<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ListItem">

    <TextView
        android:id="@+id/tv_folder_icon"
        style="@style/EventIcon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_folder_icon"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/tv_folder"
            style="@style/ListTitleText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingRight="5dp" />

        <TextView
            android:id="@+id/tv_folders_icon"
            style="@style/ListIcon"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/tv_folders"
            android:minEms="1"
            android:gravity="right"
            style="@style/ListNumericSubtitleText"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/tv_files_icon"
            style="@style/ListIcon"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/tv_files"
            android:minEms="1"
            android:gravity="right"
            style="@style/ListNumericSubtitleText" />
    </LinearLayout>

</RelativeLayout>
